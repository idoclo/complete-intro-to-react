{
	"presets": [
		"react",
		["env", { // The babel preset env
			"targets": {
				"browsers": "last 2 versions"
			},
			"loose": true,
			"modules": false
		}]
	],
  "plugins": [
    "babel-plugin-transform-class-properties"
  ],
  "env": { // doing different transformations based on environmental variables.
    "test": { // when node env = test then run this plugin
      "plugins": [
        "transform-es2015-modules-commonjs"
      ]
    }
  }
}

{
  // presets are just a group of plugins
	"presets": [
		"react",
    // "es2015" this preset is obselete as many browsers recognise ES6 so no point compiling to ES5
    // use env instead
		["env", { // The babel preset env
			"targets": {
				"browsers": "last 2 versions"
			},
			"loose": true, // saying, "I'm not doing super crazy stuff with the edge cases. Go ahead and include the smaller bit of code rather than the huge bit."
			"modules": false // telling babel to not transpile the modules as we are using webpack2 (ES6 enabled) which will worry about it.
		}]
	],
  "plugins": [
    "react-hot-loader/babel", // this top level property is required for hot module reload. It will make the joints that the HMR knows where to cut off and reinsert itself in.
    "babel-plugin-syntax-dynamic-import", // allows webpack to understand the import syntax
    "babel-plugin-dynamic-import-webpack", // translates 'import' to require.ensure (webpack understands the latter)
    "babel-plugin-transform-class-properties" // enables us to add class properties onto our ES6 classes | allows methods on our React components to be written as arrow functions | see Search.jsx line 18
  ],
  "env": { // doing different transformations based on environmental variables.
    "test": { // for tests to be able to use ES6 | when node env = test then run this plugin
      "plugins": [
        "transform-es2015-modules-commonjs"
      ]
    },
    "server": { //For Node to understand how to do ES6 modules
      "plugins": [
        "transform-es2015-modules-commonjs"
      ]
    }
  }
}
